<div class="container">
  <h2><%= t "layouts.header.category" %></h2>
  <table class="table table-hover">
    <thead>
      <tr>
        <th><%= t "layouts.header.name" %></th>
        <th><%= t "layouts.header.created_h" %></th>
        <th><%= t "layouts.header.updated_h" %></th>
      </tr>
    </thead>
    <tbody>
      <%= will_paginate @categories %>
      <%= render(@categories) || t("categories.no_cat") %>
    </tbody>
  </table>
</div>
