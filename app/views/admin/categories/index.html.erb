<div class="container">
  <h2><%= t "layouts.header.category" %></h2>
  <% if current_user.admin? %>
    <%= link_to t("layouts.header.new_btn"), new_admin_category_path, class: "btn btn-info" %>
  <% end %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th><%= t "layouts.header.name" %></th>
        <th><%= t "layouts.header.created_h" %></th>
        <th><%= t "layouts.header.updated_h" %></th>
      </tr>
    </thead>
    <tbody>
      <%= will_paginate @categories %>
      <%= render(@categories) || t("categories.no_cat") %>
    </tbody>
  </table>
</div>
