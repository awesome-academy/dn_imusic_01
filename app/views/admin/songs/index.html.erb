<div class="container">
  <h2><%= t "layouts.header.song" %></h2>

  <%= form_tag songs_path, method: :get, class: "form-group has-search", id: "search_songs" do %>
    <%= text_field_tag :search, params[:search],
      class: "form-control", placeholder: t("admin.songs.plhd_search") %>
  <% end %>

  <% if current_user.admin? %>
    <%= link_to t("layouts.header.new_btn"), new_admin_song_path, class: "btn btn-info" %>
  <% end %>

  <table class="table table-hover">
    <thead>
    <tr>
      <th><%= t "layouts.header.name" %></th>
      <th><%= t "layouts.header.category" %></th>
      <th><%= t "layouts.header.artist" %></th>
      <th><%= t "layouts.header.album" %></th>
      <th><%= t "layouts.header.rate" %></th>
    </tr>
    </thead>
    <tbody class = "song_tbody_content">
    <%= will_paginate @songs %>
    <%= render(@songs) || t("admin.songs.no_song") %>
    </tbody>
  </table>
</div>
